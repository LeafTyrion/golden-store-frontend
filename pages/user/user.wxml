<view class="user_info_wrap">
    <view wx:if="{{userInfo.avatarUrl}}" class="user_img_wrap">
        <image class="user_bg" src="{{userInfo.avatarUrl}}" />
        <view class="user_info">
            <image class="user_icon" src="{{userInfo.avatarUrl}}" />
            <view class="user_name">{{userInfo.nickName}}</view>
        </view>
    </view>
    <view wx:else class="user_btn">
        <button type="info" plain="{{true}}" open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">登录</button>
    </view>
</view>
<view class="user_content">
    <view class="user_main">
        <!-- 收藏、足迹等信息 -->
        <view class="history_wrap">
            <navigator>
                <view class="his_num">0</view>
                <view class="his_name">收藏</view>
            </navigator>
            <navigator url="/pages/collect/collect">
                <view class="his_num">{{collectNums}}</view>
                <view class="his_name">收藏</view>
            </navigator>
            <navigator>
                <view class="his_num">0</view>
                <view class="his_name">收藏</view>
            </navigator>
            <navigator>
                <view class="his_num">0</view>
                <view class="his_name">收藏</view>
            </navigator>
        </view>
        <!-- 订单、收货信息 -->
        <view class="orders_wrap">
            <view class="orders_title">我的订单</view>
            <view class="order_content">
                <navigator url="/pages/order/order?type=1">
                    <icon type="download" size="23" />
                    <view class="order_name">全部订单</view>
                </navigator>
                <navigator url="/pages/order/order?type=2">
                    <icon type="download" size="23" />
                    <view class="order_name">待付款</view>
                </navigator>
                <navigator url="/pages/order/order?type=3">
                    <icon type="download" size="23" />
                    <view class="order_name">待收货</view>
                </navigator>
                <navigator url="/pages/order/order?type=4">
                    <icon type="download" size="23" />
                    <view class="order_name">退款/退货</view>
                </navigator>
            </view>
        </view>
        <!-- 收货地址管理 -->
        <view class="address_wrap">收货地址管理</view>
        <!-- 应用信息相关 -->
        <view class="app_info_wrap">
            <view class="app_info_item app_info_contact">
                <text>联系客服</text>
                <text>123456789</text>
            </view>
            <navigator class="app_info_item" url="/pages/feedback/feedback">意见反馈</navigator>
            <view class="app_info_item">关于我们</view>
        </view>
        <!-- 推荐 -->
        <view class="recommend_wrap">把应用推荐给其他人</view>
    </view>
</view>