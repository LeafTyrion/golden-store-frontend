<!--pages/productList/productList.wxml-->
<view class="navbar">
  <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>
</view>

<view class="page">
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <block wx:for="{{goodList}}" wx:for-item="good" wx:key="id">
          <view bindtap="toProductDetail" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" data-index="{{good.id}}">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb" src="{{good.mainImg}}" />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{good.name}}</view>
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="placeholder1">价格:{{good.price}}</view>
                </view>
                <view class="weui-flex__item">
                  <view class="placeholder2">库存:{{good.stock}}</view>
                </view>
                <view class="weui-flex__item">
                  <view class="placeholder2">销量:{{good.price}}</view>
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>