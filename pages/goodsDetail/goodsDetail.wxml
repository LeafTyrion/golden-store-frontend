<view class="detail_swiper">
	<swiper autoplay="true" circular="true" indicator-dots="true">
		<swiper-item wx:for="{{goods.imagesList}}" wx:key="id" bindtap="handlePreviewImage" data-url="{{item.url}}">
			<image mode="widthFix" src="{{item.url}}" />
		</swiper-item>
	</swiper>
</view>
<view class="goods_price">￥{{goods.id}}</view>
<view class="goods_name_row">
	<view class="goods_name">{{goods.name}}</view>
</view>
<view class="goods_info">
	<view class="goods_info_title">详细信息</view>
	<view class="goods_info_content">
		<!-- 富文本 -->
		<rich-text nodes="{{goods.name}}" />
	</view>
</view>
<view class="btm_tool">
	<navigator class="tool_item btn_cart" url="/pages/cart/cart" open-type="switchTab">
		<view>前往购物车</view>
	</navigator>
	<view class="tool_item btn_buy" bindtap="toggleDialog">
		<view>加入购物车</view>
	</view>
</view>

<view class="dialog {{ showDialog ? 'dialog_show' : '' }}">
	<view class="dialog_mask" bindtap="toggleDialog" />
	<view class="dialog_container">
		<view class="row">
			<image class="image-sku" src="{{goods.imageUrl}}"></image>
			<view class="column">
				<text class="sku-price">￥7935.84</text>
				<text class="sku-title">库存20件</text>
				<text class="sku-title">商品编码：1456778788</text>
			</view>
		</view>
		<text class="border-line"></text>
		<view class="row">
			<text class="buy_num">购买数量：</text>
			<view class="quantity-position">
				<!-- 主容器 -->
				<view class="stepper">
					<!-- 减号 -->
					<text class="sign {{quantity1.delStatus}} " bindtap="delCount">-</text>
					<!-- 数值 -->
					<text class="number">{{quantity1.quantity}}</text>
					<!-- 加号 -->
					<text class="sign {{quantity1.addStatus}}" bindtap="addCount">+</text>
				</view>
			</view>
		</view>
		<text class="border-line"></text>
		<button class="button-addCar" bindtap="addCar" formType="submit">确定</button>
	</view>
</view>