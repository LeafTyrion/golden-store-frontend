<swiper class="goodsimgs" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
  <swiper-item wx:for="{{product.imgUrl}}" wx:for-item="imgUrl" wx:key="{{imgUrl.id}}">
    <image src="{{imgUrl}}" background-size="cover"></image>
  </swiper-item>
</swiper>
<view>{{product.name}}</view>
<view>{{product.id}}</view>
<view>{{product.detail}}</view>
<view class="goods_bottom_btn">
  <view class="goods_button blue" bindtap='toggleDialog'>加入购物车</view>
  <view class="goods_button green" bindtap="toCart">前往购物车</view>
</view>